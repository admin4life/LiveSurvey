extends layout

block head
  link(rel='stylesheet', href="admin.css")

block content
  h2 Please go to fb.sorghum.mobi
  .question-container(data-bind="foreach: questions")
    .row
      .col-md-4
        h3(data-bind="text: head")
        p.hidden(data-bind="text: question")
        .btn.btn-info.btn-lg(data-bind="click: sendQuestion") Show
      .col-md-8(data-bind="attr: {id}")

block footscript
  script(src="https://cdnjs.cloudflare.com/ajax/libs/d3/4.3.0/d3.min.js")
  script(src="admin.js")
